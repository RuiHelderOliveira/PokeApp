<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pokeapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PokeApp">
        <activity
            android:name=".activities.SplashActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/SplashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.LoginActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.PokeApp.NoActionBar"/>
        <activity
            android:name=".activities.PokemonListActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.PokeApp.NoActionBar"/>
        <activity
            android:name=".activities.PokemonDetailActivity"
            android:label="@string/title_pokemon_detail"
            android:parentActivityName=".activities.PokemonListActivity"
            android:theme="@style/Theme.PokeApp.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.pokeapp.activities.PokemonListActivity" />
        </activity>
    </application>

</manifest>